<style>
    .align-center a,
    .align-center button {
        width: 271px;
    }
    .dropdown-menu {
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid rgba(0,0,0,.15);
        border-radius: 0.25rem;
        box-shadow: 0 0.5rem 1rem rgb(0 0 0 / 15%);
    }
    .dropdown-menu a:not(.text-danger){
        color: #141432 !important;
    }
</style>
<div class="card card-body mb-4">
    <div class="row align-center mb-4">
        <h4 class="col-md-4">Danh sách đơn hàng</h4>
        <!-- <a class="col-md-8 btn btn-primary" href="/admin/phieu-nhap-hang"><i class="fas fa-plus"></i> Tạo đơn hàng</a> -->
    </div>
    <div class="row ">
        <div class="card mb-4">
            <header class="card-header">
                <div class="row gx-3">
                    <div class="col-lg-4 col-md-6 me-auto">
                        <input type="text" placeholder="Search..." class="form-control">
                    </div>
                    <div class="col-lg-2 col-6 col-md-3">
                        <select class="form-select">
                            <option>Status</option>
                            <option>Active</option>
                            <option>Disabled</option>
                            <option>Show all</option>
                        </select>
                    </div>
                    <div class="col-lg-2 col-6 col-md-3">
                        <select class="form-select">
                            <option>Show 20</option>
                            <option>Show 30</option>
                            <option>Show 40</option>
                        </select>
                    </div>
                </div>
            </header> <!-- card-header end// -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th scope="col">Tên KH</th>
                                <th scope="col">Email</th>
                                <th scope="col">Tổng</th>
                                <th scope="col">Trạng thái</th>
                                <th scope="col">Ngày đặt</th>
                                <th scope="col" class="text-end">Thao tác </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% listOrder.forEach(function(order, i) { %>
                            <tr>
                                <td><%= i + 1%></td>
                                <td><b><%= order.Customer[0].userName%></b></td>
                                <td><%= order.userId%></td>
                                <td><%= numberToMoney(order.total)%></td>
                                <%if(order.status=="khoitao"){%>
                                    <td> <span class="badge rounded-pill alert-warning">Chuẩn bị</span></td>
                                <%} else if(order.status=="danhan"){%>
                                    <td> <span class="badge rounded-pill alert-info">Đã nhận</span></td>
                                <%}else{%>
                                    <td> <span class="badge rounded-pill alert-success">Đang giao</span></td>
                                <%}%>
                                <td><%= formatDate(order.createAt)%></td>
                                <td class="text-end">
                                    <div class="dropdown">
                                        <a href="javascrip:void(0)" data-bs-toggle="dropdown" class="btn btn-light"> <i class='bx bx-dots-horizontal-rounded'></i> </a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="/admin/detail?o=<%= order._id%>" target="_blank">View detail</a>
                                            <!-- <a class="dropdown-item" data-id="<%= order._id%>"  href="#">Edit info</a> -->
                                            <!-- <a class="dropdown-item text-danger" data-id="<%= order._id%>"  href="#">Delete</a> -->
                                        </div>
                                    </div> <!-- dropdown //end -->
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div> <!-- table-responsive //end -->
            </div> <!-- card-body end// -->
        </div>
    </div>
</div>