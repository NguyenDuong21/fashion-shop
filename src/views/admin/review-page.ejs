<style>
    ul.fav li {
        font-size: 13px;
        color: #fdba2d;
        margin-right: 0 !important;
    }
    .img-product {
    width: 50px;
    float: left;
    margin-right: 10px;
}
</style>
<div class="card card-body mb-4">
    <div class="content-header">
        <h2 class="content-title">Reviews</h2>
    </div>
    <div class="card mb-4">
        <header class="card-header">
            <div class="row gx-3">
                <div class="col-lg-4 col-md-6 me-auto">
                    <input type="text" placeholder="Search..." class="form-control">
                </div>
                <div class="col-lg-2 col-md-3 col-6">
                    <select class="form-select">
                        <option>Status</option>
                        <option>Active</option>
                        <option>Disabled</option>
                        <option>Show all</option>
                    </select>
                </div>
                <div class="col-lg-2 col-md-3 col-6">
                    <select class="form-select">
                        <option>Show 20</option>
                        <option>Show 30</option>
                        <option>Show 40</option>
                    </select>
                </div>
            </div>
        </header>
        <!-- card-header end// -->
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th>Product</th>
                            <th>AVG Rating</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% allProductRating.forEach(function(el){ %>
                            <tr>
                                <td><%= el.productId%></td>
                                <td>
                                    <img class="img-product" src="<%=el.Product[0].img[0] %>">
                                    <b><%= el.Product[0].name%></b>
                                </td>
                                <td>
                                    <ul class="list-unstyled list-inline fav">
                                        <% for(let i=0 ; i<el.ratings; i++) {%>
                                            <li class="list-inline-item"><i class='bx bxs-star'></i></li>
                                        <% }%>
                                        <% for(let i=0 ; i<5-el.ratings; i++) {%>
                                            <li class="list-inline-item"><i class='bx bx-star'></i></li>
                                        <% }%>
                                    </ul>
                                    <a href="/detail-review">( 09 Review )</a>
                                </td>
                                <td class="text-end">
                                    <a href="#" class="btn btn-light" data-id="<%= el.productId%>">Chi tiáº¿t</a>
                                </td>
                            </tr>
                        <%}) %>
                    </tbody>
                </table>

            </div> <!-- table-responsive//end -->
        </div>
        <!-- card-body end// -->
    </div>
</div>