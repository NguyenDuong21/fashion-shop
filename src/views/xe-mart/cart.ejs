<style>
  .t-img img {
    width: 80px;
    height: 80px
  }
  
  .t-qty {
    width: 160px;
  }
</style>
<!-- Breadcrumb Area -->
<section class="breadcrumb-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="breadcrumb-box text-center">
          <ul class="list-unstyled list-inline">
            <li class="list-inline-item"><a href="#">Home</a></li>
            <li class="list-inline-item"><span>||</span> Shopping Cart</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Breadcrumb Area -->

<!-- Shopping Cart -->
<section class="shopping-cart">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="cart-table table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th class="t-pro">Sản phẩm</th>
                <th class="t-price">Giá</th>
                <th class="t-qty">Số lượng</th>
                <th class="t-total">Giá</th>
                <th class="t-rem"></th>
              </tr>
            </thead>
            <tbody>
              <%if(product.length >0){%>
                <% var total = 0; %>
                  <% product.forEach(function(product) { %>
                    <tr>
                      <td class="t-pro d-flex">
                        <div class="t-img">
                          <a href="#"><img src="<%=product.img[0]%>" alt=""></a>
                        </div>
                        <div class="t-content">
                          <p class="t-heading">
                            <a href="#">
                              <%=product.name%>
                            </a>
                          </p>
                        </div>
                      </td>
                      <td class="t-price">
                        <%=numberToMoney(product.price)%>
                      </td>
                      <td class="t-qty">
                        <div class="qty-box">
                          <div class="quantity buttons_added">
                            <input type="button" value="-" data-id="<%=product.id%>" class="minus">
                            <input type="number" step="1" min="1" max="10" value="<%=allCart[product.id] %>" class="qty text" size="4" readonly>
                            <input type="button" value="+" data-id="<%=product.id%>" class="plus">
                          </div>
                        </div>
                      </td>
                      <td class="t-total">
                        <%=numberToMoney(product.price * allCart[product.id])%>
                      </td>
                      <td class="t-rem"><a href="#" class="del-pro" data-id="<%=product.id%>"><i class="fa fa-trash-o"></i></a></td>
                    </tr>
                    <% total += product.price * allCart[product.id]; %>
                      <%})%>
                        <%} else {%>
                          <tr>
                            <td colspan="5" class="text-center">Không có sản phẩm nào</td>
                          </tr>
                          <%}%>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-4">

      </div>
      <div class="col-md-4">

      </div>
      <div class="col-md-4">
        <div class="crt-sumry">
          <h5>Cart Summery</h5>
          <ul class="list-unstyled">
            <li>Subtotal <span><%=numberToMoney(total)%></span></li>
            <li>Grand Total <span><%=numberToMoney(total)%></span></li>
          </ul>
          <div class="cart-btns text-right">
            <form action="/cart/create-order" method="post">
              <button type="submit" class="chq-out" name="checkout" value="checkout">Thanh toán</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Shopping Cart -->
<script src="/scripts/cart-page.js"></script>