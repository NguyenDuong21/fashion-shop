<style>
  .img-checkout {
    width: 60px;
    height: 60px;
  }
  
  .discount {
    text-decoration: line-through;
  }
  
  .discount-product {
    text-decoration: line-through;
  }
</style>
<!-- Breadcrumb Area -->
<section class="breadcrumb-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="breadcrumb-box text-center">
          <ul class="list-unstyled list-inline">
            <li class="list-inline-item"><a href="#">Home</a></li>
            <li class="list-inline-item"><span>||</span> Checkout</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Breadcrumb Area -->

<!-- Checkout -->
<section class="checkout">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <form action="#">
          <h5>Thông tin hóa đơn</h5>
          <div class="row">
            <div class="col-md-12">
              <div>
                <label>Name <span>*</span></label>
                <input type="text" name="name" />
              </div>
              <div>
                <label> Email Address <span>*</span></label>
                <input type="text" name="email" />
              </div>
              <div>
                <label>Address</label>
                <input type="text" name="address" />
              </div>
              <div>
                <label>Phone<span>*</span></label>
                <input type="text" name="phone" />
              </div>
            </div>
            <div class="col-md-12">
              <label>Order Note</label>
              <textarea name="note" placeholder="Note for your order (optional). Example- special notes for delivery"></textarea>
            </div>
          </div>
          <h5>Mã giảm giá của bạn</h5>
          <% for (var prop in objTitle) { %>
            <div class="row">
              <h5 class="col-md-12" style="font-size: 18px;">
                <%= objTitle[prop]%>
              </h5>
              <% objVoucherRender[prop].forEach(function(voucher) { %>
                <% if (curentOrder.subTotal >= voucher.from) {%>
                  <% if (prop == '62d7882c2c06f2cebf59eb3a' && VoucherProductAvailability[voucher._id].length == 0) {%>
                    <div class="col-md-12 mb-3 voucher-wraper form-check-label" for="apply<%=voucher._id%>">
                      <div class="voucher row">
                        <div class="col-9 text-center">
                          <h5 class="voucher__type">
                            <%= objTitle[voucher.type]%>
                          </h5>
                          <h4 class="voucher-detail">
                            <span class="voucher__amount">
                                    <%= addCommaMoney(voucher.discount)%>
                                              </span>
                            <span class="voucher__unit mr-1">
                                    <%= voucher.unit%>
                                              </span>
                            <span class="voucher__max">
                                    Tối đa
                                    <%= addCommaMoney(voucher.max)%>
                                              </span>
                          </h4>
                          <i class="voucher__condition">
                                              Điều kiện:  Áp dụng cho đơn hàng từ
                                              <span class="voucher__from">
                                    <%= numberToMoney(voucher.from)%>
                                              </span>
                                              <% if(voucher.VoucherProduct.length >0) {%>
                                                <% voucher.VoucherProduct.forEach(function(productVoucher) { %>
                                                  <span>| <%= productVoucher.name%></span>
                                                <% }) %>
                                              <% }%>
                                            </i>
                        </div>
                        <div class="col-3 text-center">
                          <img src="/admin/img/icons/unicons/voucher.webp"><br>
                          <div class="cricel">
                            KHÔNG ĐỦ ĐIỀU KIỆN
                          </div>
                        </div>
                      </div>
                    </div>
                    <%} else {%>
                      <div class="col-md-12 mb-3 voucher-wraper form-check-label" for="apply<%=voucher._id%>">
                        <div class="voucher row">
                          <div class="col-9 text-center">
                            <h5 class="voucher__type">
                              <%= objTitle[voucher.type]%>
                            </h5>
                            <h4 class="voucher-detail">
                              <span class="voucher__amount">
                                      <%= addCommaMoney(voucher.discount)%>
                                                </span>
                              <span class="voucher__unit mr-1">
                                      <%= voucher.unit%>
                                                </span>
                              <span class="voucher__max">
                                      Tối đa
                                      <%= addCommaMoney(voucher.max)%>
                                                </span>
                            </h4>
                            <i class="voucher__condition">
                                                Điều kiện:  Áp dụng cho đơn hàng từ
                                                <span class="voucher__from">
                                      <%= numberToMoney(voucher.from)%>
                                                </span>
                                                <% if(voucher.VoucherProduct.length >0) {%>
                                                  <% voucher.VoucherProduct.forEach(function(productVoucher) { %>
                                                    <span>| <%= productVoucher.name%></span>
                                                  <% }) %>
                                                <% }%>
                                              </i>
                          </div>
                          <div class="col-3 text-center">
                            <img src="/admin/img/icons/unicons/voucher.webp"><br>
                            <div class="form-check">
                              <%if (objCheckVoucherUsed[voucher._id]){%>
                                <input class="form-check-input option_selector" type="radio" name="apply<%=prop%>" id="apply<%=voucher._id%>" value="<%=voucher._id%>" data-checked="true" checked>
                                <%} else {%>
                                  <input class="form-check-input option_selector" type="radio" name="apply<%=prop%>" id="apply<%=voucher._id%>" value="<%=voucher._id%>">
                                  <%}%>
                                    <label class="form-check-label" for="apply<%=voucher._id%>">
                              Sử dụng
                            </label>
                            </div>
                          </div>
                        </div>
                      </div>
                      <%}%>
                        <%} else {%>
                          <div class="col-md-12 mb-3 voucher-wraper form-check-label" for="apply<%=voucher._id%>">
                            <div class="voucher row">
                              <div class="col-9 text-center">
                                <h5 class="voucher__type">
                                  <%= objTitle[voucher.type]%>
                                </h5>
                                <h4 class="voucher-detail">
                                  <span class="voucher__amount">
                                    <%= addCommaMoney(voucher.discount)%>
                                              </span>
                                  <span class="voucher__unit mr-1">
                                    <%= voucher.unit%>
                                              </span>
                                  <span class="voucher__max">
                                    Tối đa
                                    <%= addCommaMoney(voucher.max)%>
                                              </span>
                                </h4>
                                <i class="voucher__condition">
                                              Điều kiện:  Áp dụng cho đơn hàng từ
                                              <span class="voucher__from">
                                    <%= numberToMoney(voucher.from)%>
                                              </span>
                                              <% if(voucher.VoucherProduct.length >0) {%>
                                                <% voucher.VoucherProduct.forEach(function(productVoucher) { %>
                                                  <span>| <%= productVoucher.name%></span>
                                                <% }) %>
                                              <% }%>
                                            </i>
                              </div>
                              <div class="col-3 text-center">
                                <img src="/admin/img/icons/unicons/voucher.webp"><br>
                                <div class="cricel">
                                  KHÔNG ĐỦ ĐIỀU KIỆN
                                </div>
                              </div>
                            </div>
                          </div>
                          <%}%>
                            <%})%>
            </div>
            <%}%>


        </form>
      </div>
      <div class="col-md-5">
        <div class="row">
          <div class="col-md-12">
            <div class="order-review">
              <h5>Order Review</h5>
              <div class="review-box">
                <ul class="list-unstyled">
                  <li>Product <span>Total</span></li>
                  <%if(curentOrder.products.length >0){%>
                    <% curentOrder.products.forEach(function(product, i) { %>
                      <li class="d-flex justify-content-between">
                        <div class="pro">
                          <img class="img-checkout" src="<%= curentOrder.Product[i].img[0]%>" alt="" />
                          <p>
                            <%= curentOrder.Product[i].name%>
                          </p>
                          <%if (product.discount.amount > 0){%>
                            <span class="amPro<%= product.productId%>"><%= product.qty%> </span><span>X</span> <span class="curent-price<%= product.productId%>" data-curentprice="<%= product.price%>"><%= numberToMoney(product.price - product.discount.amount) %></span>&nbsp;
                            <span class="discount-product<%= product.productId%> text-danger discount-product" data-pdid="<%= product.productId%>"><%= numberToMoney(product.price) %></span>
                            <%} else {%>
                              <span class="amPro<%= product.productId%>"><%= product.qty%> </span><span>X</span> <span class="curent-price<%= product.productId%>" data-curentprice="<%= product.price%>"><%= numberToMoney(product.price) %></span>&nbsp;
                              <span class="discount-product<%= product.productId%> text-danger d-none discount-product" data-pdid="<%= product.productId%>"><%= numberToMoney(product.price) %></span>
                              <%}%>
                        </div>
                        <div class="prc<%= product.productId%>">
                          <%if (product.discount.amount > 0){%>
                            <p>
                              <%= numberToMoney(product.qty * (product.price - product.discount.amount)) %>
                            </p>
                            <%} else {%>
                              <p>
                                <%= numberToMoney(product.qty * product.price) %>
                              </p>
                              <%}%>

                        </div>
                      </li>
                      <%})%>
                        <%}%>
                          <li class="component-price">Tổng <span class="subtotal"><%= numberToMoney(curentOrder.subTotal)%></span></li>
                          <%if ( curentOrder.discount.amount> 0){%>
                            <li class="component-price discount-subtotal text-danger">Giảm trên tổng hóa đơn <span class="amount-discount-total"><%=numberToMoney(-curentOrder.discount.amount)%></span></li>
                            <%} else {%>
                              <li class="component-price discount-subtotal d-none text-danger">Giảm trên tổng hóa đơn <span class="amount-discount-total"></span></li>
                              <%}%>
                                <li class="component-price shiping">Phí ship <span><%= numberToMoney(curentOrder.shiping)%></span></li>
                                <%if ( curentOrder.shipingDiscount.amount> 0){%>
                                  <li class="component-price discount-ship text-danger">Giảm trừ phí ship <span class="amount-discount-ship"><%= numberToMoney(-curentOrder.shipingDiscount.amount)%></span></li>
                                  <%} else {%>
                                    <li class="component-price discount-ship d-none text-danger">Giảm trừ phí ship <span class="amount-discount-ship"><%= numberToMoney(-15000)%></span></li>
                                    <%}%>
                                      <li class="component-price">Tổng cộng <span class="text-danger total"><%= numberToMoney(curentOrder.total)%></span></li>
                </ul>
              </div>
            </div>
          </div>
          <div class="col-md-12">
            <div class="pay-meth">
              <h5>Payment Method</h5>
              <div class="pay-box">
                <ul class="list-unstyled">
                  <li>
                    <input type="radio" id="pay1" name="payment" value="pay1" checked />
                    <label for="pay1"><span><i class="fa fa-circle"></i></span>Cash On
                      Delivery</label
                    >
                    <p>
                      Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                      Eaque sint placeat illo animi quis minus accusantium ad
                      doloribus, odit explicabo asperiores quidem.
                    </p>
                  </li>
                  <li>
                    <input type="radio" id="pay2" name="payment" value="pay2" />
                    <label for="pay2"
                      ><span><i class="fa fa-circle"></i></span>Direct Bank
                      Transfer</label
                    >
                  </li>
                  <li>
                    <input type="radio" id="pay3" name="payment" value="pay3" />
                    <label for="pay3"
                      ><span><i class="fa fa-circle"></i></span>Cheque
                      Payment</label
                    >
                  </li>
                  <li>
                    <input type="radio" id="pay4" name="payment" value="pay4" />
                    <label for="pay4"
                      ><span><i class="fa fa-circle"></i></span>Paypal</label
                    >
                  </li>
                  <li>
                    <input type="radio" id="pay5" name="payment" value="pay5" />
                    <label for="pay5"
                      ><span><i class="fa fa-circle"></i></span>Payoneer</label
                    >
                  </li>
                </ul>
              </div>
            </div>
            <button type="button" name="button" class="ord-btn">
              Place Order
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Checkout -->
<script src="/scripts/checkout-page.js"></script>